{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Firstname</th>
                <th>Address</th>
                <th>Cp</th>
                <th>City</th>
                <th>Country</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.name }}</td>
                <td>{{ address.firstname }}</td>
                <td>{{ address.address }}</td>
                <td>{{ address.cp }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.country }}</td>
                <td>
                    <a href="{{ path('app_adminaddress_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('app_adminaddress_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_adminaddress_new') }}">Create new</a>
{% endblock %}
